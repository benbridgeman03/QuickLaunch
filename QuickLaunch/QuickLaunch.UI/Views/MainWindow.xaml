<Window x:Class="QuickLaunch.UI.Views.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:converters="clr-namespace:QuickLaunch.UI.Converters"
        Title="QuickLaunch" Width="700" SizeToContent="Height" 
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent">

    <Window.Resources>
        <converters:IconConverter x:Key="IconConverter"/>
    </Window.Resources>

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="30" Background="White" Padding="20" BorderBrush="#DDDDDD" BorderThickness="1" SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border CornerRadius="27" Background="#F4F4F4" BorderThickness="0" Height="54" HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="" FontSize="22" Foreground="#666666" VerticalAlignment="Center" Margin="20,0,0,0"/>

                        <TextBox Grid.Column="1" x:Name="SearchTextBox" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" FontSize="24" Foreground="Black" Margin="10,0,10,2" CaretBrush="Black" TextChanged="SearchTextBox_TextChanged" PreviewKeyDown="SearchTextBox_PreviewKeyDown"/>
                        <TextBlock Grid.Column="1" x:Name="PlaceholderText" Text="Search..." Foreground="#999999" FontSize="24" VerticalAlignment="Center" Margin="12,0,0,2" IsHitTestVisible="False"/>

                        <Button Grid.Column="2" Click="OpenSettings_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" VerticalAlignment="Center" Margin="0,0,15,0" Width="40" Height="40">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#888888"/>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="20">
                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#E0E0E0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <ListBox x:Name="SearchResults"
                 MaxHeight="350"
                 Margin="30,95,30,0"
                 Visibility="Collapsed"
                 Background="White"
                 BorderThickness="0"
                 Padding="0"
                 Width="{Binding ElementName=MainBorder, Path=ActualWidth}"
                 MouseLeftButtonUp="SearchResults_MouseLeftButtonUp"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.15"/>
            </ListBox.Effect>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5,4" Background="Transparent">

                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open File Location" 
                          Click="OpenFileLocation_Click" 
                          Tag="{Binding Item.Path}">
                                    <MenuItem.Icon>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE8A7;" 
                                           FontSize="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Grid.ContextMenu>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="#F0F0F0" Margin="0,0,15,0">
                            <TextBlock Text="{Binding Item.Type, Converter={StaticResource IconConverter}}" 
                               FontFamily="Segoe MDL2 Assets" 
                               FontSize="20" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Foreground="#555555"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Item.FileName}" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Foreground="#333333"/>

                            <TextBlock Text="{Binding Item.Path}" 
                       FontSize="12" 
                       Foreground="#999999" 
                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Grid Margin="0,2">
                                    <Border x:Name="HoverBorder" Background="Transparent" CornerRadius="12"/>
                                    <ContentPresenter Margin="10" VerticalAlignment="Center"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" TargetName="HoverBorder" Value="#F5F5F5"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" TargetName="HoverBorder" Value="#E8E8E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>