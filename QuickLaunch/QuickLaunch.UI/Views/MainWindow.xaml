<Window x:Class="QuickLaunch.UI.Views.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="QuickLaunch" Width="800" SizeToContent="Height" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent">
    <Grid>
        <Border x:Name="MainBorder" CornerRadius="20" Background="White" Padding="12" BorderBrush="Gray" SnapsToDevicePixels="True">
            <Grid Margin="30,20,30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="20" Background="#66FFFFFF" BorderThickness="1" Height="50" HorizontalAlignment="Stretch">
                    <Grid>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="32" Foreground="Black" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox x:Name="SearchTextBox" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" FontSize="32" Foreground="Black" Padding="50,0,10,0" TextChanged="SearchTextBox_TextChanged"/>
                        <TextBlock x:Name="PlaceholderText" Text="Search..." Foreground="Gray" FontSize="32" VerticalAlignment="Center" Margin="50,0,0,0" IsHitTestVisible="False"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <ListBox 
            x:Name="SearchResults"
            MaxHeight="300"
            Margin="40,90,40,0"
            Visibility="Collapsed"
            Background="White"
            BorderThickness="0"
            Padding="0"
            DisplayMemberPath="Display"
            Width="{Binding ElementName=MainBorder, Path=ActualWidth}"
            MouseLeftButtonUp="SearchResults_MouseLeftButtonUp">
            <ListBox.Effect>
                <DropShadowEffect 
                    BlurRadius="15"
                    ShadowDepth="2"
                    Opacity="0.3"/>
            </ListBox.Effect>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="FontSize" Value="26"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Grid Margin="0,0,0,10">
                                    <Border 
                                        x:Name="HoverBorder"
                                        Background="Transparent"
                                        CornerRadius="8"
                                        Margin="100,0">

                                        <ContentPresenter
                                            Margin="10,0"
                                            VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" TargetName="HoverBorder" Value="#D9D9D9"/>
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" TargetName="HoverBorder" Value="#C7C7C7"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>